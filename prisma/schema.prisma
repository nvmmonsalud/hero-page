generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  status    String   @default("NEW") // NEW, CONTACTED, CLOSED
  createdAt DateTime @default(now())
}

model AdminUser {
  id           String @id @default(cuid())
  username     String @unique
  passwordHash String
}
